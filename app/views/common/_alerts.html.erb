<% if flash[:alert] && flash[:alert].kind_of?(Array) %>
  <%= tag.div("Erros:", class: "alert alert-danger") do %>
    <ul>
      <% flash[:alert].each do |field, errors| %>
        <li>
          <%= field.to_s.sub("_", " ").capitalize %>
          <ul>
            <% errors.each do |error| %>
              <li><%= error.to_s.capitalize %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <%= tag.div(flash[:alert], class: "alert alert-danger") if flash[:alert] %>
<% end %>
<%= tag.div(flash[:notice], class: "alert alert-success") if flash[:notice] %>
